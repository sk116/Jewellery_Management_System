@model Jewellery_Management_System.Models.OwnerDebt

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" asp-controller="OwnerDebt">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CreditorName" class="control-label"></label>
                <input asp-for="CreditorName" class="form-control" />
                <span asp-validation-for="CreditorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DebtAmount" class="control-label"></label>
                <input asp-for="DebtAmount" class="form-control" />
                <span asp-validation-for="DebtAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
        </form>
    </div>
</div>

